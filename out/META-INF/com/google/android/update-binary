#!/sbin/sh

OUTFD=$2
ZIP=$3

ui_print() {
  echo -n -e "ui_print $1\n" > /proc/self/fd/$OUTFD
  echo -n -e "ui_print\n" > /proc/self/fd/$OUTFD
}

resolve_link() {
  if [ -z "$1" ] || [ ! -e $1 ]; then
    return 1
  fi
  local VAR=$1
  while [ -L $VAR ]; do
    VAR=$(readlink $VAR)
  done
  echo $VAR
}

rm -rf /tmp/starlte
mkdir -p /tmp/starlte
cd /tmp/starlte
unzip -o "$ZIP"

ui_print " - flashing kernel"
BOOT=$(resolve_link $(find /dev/block/platform -type l -iname boot))
dd if=boot.img of="$BOOT"

ui_print " ";
ui_print " - mounting partition /system"
mount /system

ui_print " - removing Rlc and SecurityLogAgent App"
rm -rf /system/priv-app/Rlc
rm -rf /system/app/SecurityLogAgent

ui_print " - patching /system/build.prop"
sed -i 's/ro.config.tima=1/ro.config.tima=0/' /system/build.prop
sed -i 's/ro.treble.enabled=true/ro.treble.enabled=false/' /system/build.prop

ui_print " - removing bloatwares"
rm -rf /system/preload/NaverV_N
rm -rf /system/preloadFotaOnly/SamsungMembersStub
rm -rf /system/app/AutomationTest_FB
rm -rf /system/app/CarmodeStub
rm -rf /system/app/GearManagerStub
rm -rf /system/app/Facebook_stub
rm -rf /system/app/FactoryCameraFB
rm -rf /system/app/FBAppManager_NS
rm -rf /system/app/FlipboardBriefing
rm -rf /system/app/VisionIntelligence2
rm -rf /system/app/UniversalMDMClient
rm -rf /system/app/SamsungPassAutofill_v1
rm -rf /system/app/KnoxAttestationAgent
rm -rf /system/app/KnoxKeyChain
rm -rf /system/app/YahooEdgeFinance
rm -rf /system/app/YahooEdgeSports
rm -rf /system/container

rm -rf /system/priv-app/knoxanalyticsagent
rm -rf /system/priv-app/knoxvpnproxyhandler
rm -rf /system/priv-app/KnoxCore
rm -rf /system/priv-app/KnoxDesktopLauncher
rm -rf /system/priv-app/KnoxGuard
rm -rf /system/priv-app/KnoxContainerDesktop
rm -rf /system/priv-app/ContainerAgent3
rm -rf /system/priv-app/Bixby
rm -rf /system/priv-app/BixbyAgentStub
rm -rf /system/priv-app/BixbyHome
rm -rf /system/priv-app/BixbyService
rm -rf /system/priv-app/BixbyVisionFramework
rm -rf /system/priv-app/BixbyWakeup
rm -rf /system/priv-app/SettingsBixby
rm -rf /system/priv-app/SystemUIBixby2
rm -rf /system/priv-app/Excel_SamsungStub
rm -rf /system/priv-app/FBInstaller_NS
rm -rf /system/priv-app/FBServices
rm -rf /system/priv-app/LinkedIn_SamsungStub
rm -rf /system/priv-app/OneDrive_Samsung_v3
rm -rf /system/priv-app/PowerPoint_SamsungStub
rm -rf /system/priv-app/serviceModeApp_FB
rm -rf /system/priv-app/SecureFolder
rm -rf /system/priv-app/SamsungPass
rm -rf /system/priv-app/SmartManager_v6_DeviceSecurity
rm -rf /system/priv-app/SPPPushClient
rm -rf /system/priv-app/SamsungCloudClient
rm -rf /system/priv-app/Upday
rm -rf /system/priv-app/Word_SamsungStub
rm -rf /system/priv-app/GalaxyAppsWidget_Phone_Dream
rm -rf /system/priv-app/GearVRService
rm -rf /system/priv-app/Gear360Editor_Beyond
rm -rf /system/priv-app/PaymentFramework

ui_print " "
ui_print " - mounting partition /vendor"
mount /vendor

ui_print ""
ui_print " - patching /vendor/build.prop"
if [ $(grep -c wlan.wfd.hdcp=disable /vendor/build.prop) -eq 0 ];
then
  echo 'wlan.wfd.hdcp=disable' >> /vendor/build.prop
  echo 'ro.kernel.android.checkjni=0' >> /vendor/build.prop
  echo 'ro.kernel.checkjni=0' >> /vendor/build.prop
  echo 'ro.securestorage.support=false' >> /vendor/build.prop
  echo 'persist.security.ams.enforcing=0' >> /vendor/build.prop
  echo 'ro.security.vaultkeeper.feature=0' >> /vendor/build.prop
fi
sed -i 's|ro.frp.pst=/dev/block/persistent|ro.frp.pst=|' /vendor/build.prop

ui_print " "
ui_print " - tuning file systems..."
fstrim -v /system
fstrim -v /vendor

ui_print " "
ui_print " - unmounting parition /vendor"
umount /vendor
ui_print " - unmounting partition /system"
umount /system

ui_print " "
ui_print "finished"